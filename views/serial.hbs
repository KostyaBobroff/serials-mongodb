<h1>{{serial.title}}</h1>
<div class="row">{{sserial.lastTitle}}</div>
<div class="row">
  <h5>О сериале</h5>
</div>
<div class="row">
  <div class="col s2">Страна:</div>
  <div class="col 10">{{serial.country}}</div>
</div>
<div class="row">
  <div class="col s2">Жанр:</div>
  <div class="col s10">{{serial.genre}}</div>
</div>
<div class="row">
  <div class="col s2">Рейтинг:</div>
  <div class="col s10">{{serial.raiting}}</div>
</div>
<div class="row">
  <div class="col s2"><a href="{{serial.trailer}}" target="_blank">Трейлер</a></div>
</div>
<div class="row">
  <div class="col s2">Награды:</div>
  <div class="col s10">
    {{# each serial.prizes}}
      <div>{{title}}</div>
    {{/each}}
  </div>
</div>
<div class="row"><h5>Студия</h5></div>
<div class="row">
  <div class="col s2">Студия:</div>
  <div class="col s10"><a href="{{serial.studio.site}}" target="_blank">{{serial.studio.name}}</a></div>
</div>
<div class="row">
  <div class="col s2">Страна:</div>
  <div class="col s10">{{serial.studio.country}}</div>
</div>
<div class="row">
  <div class="col s2">Директор:</div>
  <div class="col s10">{{serial.studio.chief}}</div>
</div>
<div class="row">
  <h5>Сезоны</h5>
</div>
<div class="row">
  <div class="col s12">
    <ul class="tabs">
      {{# each serial.seasons}}
        <li class="tab col s3"><a href="#{{@index}}">Сезон {{inc @index}}</a></li>
      {{/ each}}
    </ul>
  </div>
  {{# each serial.seasons}}
    <div id="{{@index}}" class="col s12">
      <div class="row"><h5>{{title}}</h5></div>
      <div class="row">
        <div class="col s2">Рейтинг:</div>
        <div class="col s10">{{raiting}}</div>
      </div>
      <div class="row"><a href="{{trailer}}" target="_blank">Трейлер</a></div>
      <div classs="row"><h5>Серии</h5></div>
      {{#each series}}
        <div class="row">
          <h6>
            <a href="{{trailer}}" target="_blank">Серия {{inc @index}} ({{title}})</a>
          </h6>
        </div>
        <div class="row">
          <div class="col s2">Рейтинг: </div>
          <div class="col s10">{{raiting}}</div>
        </div>
        <div class="row">
          <div class="col s2">Актеры</div>
          <div class="col s10">
            {{#each actors}}
              <div>{{name}}</div>
            {{/each}}
          </div>
        </div>
        <div class="row">
          <div class="col s2">Режисеры</div>
          <div class="col s10">
            {{#each fillmakers}}
              <div>{{name}}</div>
            {{/each}}
          </div>
        </div>
      {{/each}}
    </div>
  {{/ each}}
</div>

